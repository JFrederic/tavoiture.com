{% extends 'layout.html.twig' %}

{% block content %}
<div class="jumbotron">
  <h1>TAVOITURE.COM</h1>

  </div>
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-4">
        <form class="login-container" action="" method="post">
          <h2>Trouver une voiture</h2>
                <div class="form-group ">
                  <input class="form-control " type="date" name="address" value="" >
                </div>
                <div class="form-group ">
                  <input class="form-control " type="date" name="start_date" value="" >
                </div>
                <div class="form-group ">
                  <input class="form-control " type="date" name="end_date" value="" >
                </div>
          <input class="btn btn-primary" type="submit" name="" value="Trouver une voiture">
        </form>
    </div>
    <div class="col-md-8">
      <h2>Séléctions voitures</h2>
      {% for vehicle in vehicles|reverse %}
      <div class="col-sm-4 col-md-3">
        <div class="thumbnail">
          <img src="{{vehicle.image}}" alt="photos">
          <div class="caption">
            <h4>{{vehicle.price}} €</h4>
            <ul class="list-inline">
              <li>{{vehicle.marque}}</li>
              <li>{{vehicle.modele}}</li>
              <li>{{vehicle.places_number}} places</li>
            </ul>
            <a href="/vehicle/{{vehicle.id_vehicle}}" class="btn btn-primary" role="button">Réserver</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

  </div>
</div>



{% endblock %}
